<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OptionsSC">

    <TextView
        android:id="@+id/optionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Opciones"
        android:textSize="24dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/daynightText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/optionText"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:text="Modo dÃ­a/noche"
        android:textColor="#000000"/>

    <Switch
        android:id="@+id/daynightSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/daynightText"
        app:layout_constraintTop_toTopOf="@+id/daynightText"
        android:layout_marginStart="120dp"
        android:checked="false"
        android:thumbTint="#745cec"
        android:trackTint="#745cec"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <TextView
        android:id="@+id/notificationsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/daynightText"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:text="Notificaciones"
        android:textColor="#000000"/>

    <Switch
        android:id="@+id/notificationsSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:checked="false"
        app:layout_constraintStart_toEndOf="@+id/notificationsText"
        app:layout_constraintTop_toTopOf="@+id/notificationsText"
        android:thumbTint="#745cec"
        android:trackTint="#745cec"
        tools:ignore="UseSwitchCompatOrMaterialXml" />


</androidx.constraintlayout.widget.ConstraintLayout>

